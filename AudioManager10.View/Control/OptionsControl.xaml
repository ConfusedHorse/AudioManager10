<UserControl x:Class="AudioManager10.View.Control.OptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:module="clr-namespace:AudioManager10.View.Module"
             xmlns:p="clr-namespace:AudioManager10.View.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="300"
             DataContext="{Binding Path=OptionsViewModel,
                                   Source={x:Static module:ViewModelLocator.Instance}}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resource/Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Height="32">
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Click="ButtonBase_OnClick"
                    Style="{StaticResource SmallInvisibleButtonStyle}"
                    ToolTip="{x:Static p:Resources.Options}">
                <Image Source="../Resource/Icons/032/settings_white.png"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
